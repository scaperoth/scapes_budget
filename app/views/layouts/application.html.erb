<!DOCTYPE html>
<html>
    <head>
        <title>ScapesBudget</title>
        <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
        <%= javascript_include_tag 'session', 'data-turbolinks-track' => true %>
        <%= csrf_meta_tags %>
        <meta name="viewport" content="width=device-width, initial-scale=1"/>
        <!-- Prelang: Analytics / Google Analytics -->
        <%= analytics_init if Rails.env.production? or Rails.env.development? %></head>
    <body>

        <nav class="uk-navbar" role="navigation" style="margin-bottom: 0">
            <div class="uk-grid">
                <div class="navbar-container uk-width-small-9-10 uk-container-center">
                    <%= render partial: "elements/navbar" %>
                    <% if defined?(Devise) %>
                    <% if user_signed_in? %>
                    <%= render partial: "elements/sidebar" %>
                    <% end %>
                    <% end %>
                </div>
            </div>
        </nav>

        <div id="page-wrapper" class="uk-grid ">
            <% if controller.controller_name != 'pages' %>
            <div class="uk-width-small-1-1 alert-container" style="margin-top:10px; min-height:55px; z-index:2;">
                <div class="uk-width-small-1-1 uk-container-center ">
                    <%= uikit_messages %>
                </div>
            </div>
            <% end %>

            <div class="main-content uk-width-1-1">
                <% if devise_controller?  %>

                <div class="uk-cover-background uk-height-viewport uk-width-viewport full-bg" style="background-image: url(assets/<%= background_image %>);">
                    <div class="transparent-black-7 uk-height-viewport uk-width-viewport inner-overlay">
                        <div class="uk-width-8-10 uk-container-center ">
                            <div class="uk-width-1-1 uk-width-medium-1-2 uk-width-large-1-3 uk-container-center">

                                <%= yield %>
                            </div>
                        </div>
                    </div>
                </div>
            <% else %>

                <div class="uk-width-small-1-1 uk-container-center">
                    <%= yield %>
                </div>

                <% end %>
            </div>
        </div>
    </body>
</html>