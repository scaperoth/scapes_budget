<% content_for :head do %>
Account
<br/>
<small><%= current_user.username %></small>
<% end %>
<div class="uk-width-1-1 uk-width-large-1-2  uk-container-center ">
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "uk-form uk-form-stacked form-account page-form-centered" }) do |f| %>
    <%= f.error_notification %>
    
    <div class="uk-form-row">
        <%= f.input :fname, required: true, placeholder: "First Name", label: "First Name", label_html: {class: 'uk-hidden-small'}, input_html: {class: 'uk-width-small-1-1 uk-width-medium-1-4 uk-width-large-1-2 uk-width-xlarge-1-3'}, equired: true, autofocus: true %>
    </div>
    <div class="uk-form-row">
        <%= f.input :lname, required: true, placeholder: "Last Name", label: "Last Name",  label_html: {class: 'uk-hidden-small'}, input_html: {class: 'uk-width-small-1-1 uk-width-medium-1-4 uk-width-large-1-2 uk-width-xlarge-1-3'},required: true %>
    </div>
    <div class="uk-form-row">
        <%= f.input :email, required: true, label_html: {class: 'uk-hidden-small'}, input_html: {class: 'uk-width-small-1-1 uk-width-small-1-1 uk-width-medium-1-4 uk-width-large-1-2 uk-width-xlarge-1-3'} %>
    </div>
    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <p>Currently waiting confirmation for:
        <%= resource.unconfirmed_email %></p>
    <% end %>

    <div class="uk-form-row">
        <%= f.input :password, placeholder: "New Password", autocomplete: "off", hint: "leave it blank if you don't want to change it", required: false, label_html: {class: 'uk-hidden-small'}, input_html: {class: 'uk-width-small-1-1 uk-width-medium-1-4 uk-width-large-1-2 uk-width-xlarge-1-3'} %>
    </div>

    <div class="uk-form-row ">
        <%= f.input :password_confirmation, placeholder: "Confirm New Password" , required: false, label_html: {class: 'uk-hidden-small'}, input_html: {class: 'uk-width-small-1-1 uk-width-medium-1-4 uk-width-large-1-2 uk-width-xlarge-1-3'} %>
    </div>

    <div class="uk-form-row ">
        <%= f.input :current_password, hint: "we need your current password to confirm your changes", required: true, label_html: {class: 'uk-hidden-small'}, input_html: {class: 'uk-width-small-1-1 uk-width-medium-1-4 uk-width-large-1-2 uk-width-xlarge-1-3'} %>
    </div>

    <div class="uk-form-row">
        <%= f.submit "Update", class: "uk-button uk-button-success" %>
        <%= link_to "Back", :back, class: "uk-button uk-button-default" %>
    </div>
    <% end %>

    <br/>
    <h3>Cancel my account</h3>

    <p>Unhappy?
        <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

</div>