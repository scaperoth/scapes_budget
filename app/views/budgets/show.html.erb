<%- model_class = Budget -%>
<% content_for :head do %>
<%= t '.title', :default => Budget  %>
<br/>
<small><%= @budget.name %></small>
<% end %>
<section class="page-section resource-show">
    <div class="uk-width-1-3 uk-container-center ">
        <% if @budget.active %>
          <p> This is your default budget. </p>
        <% end %>
        <div class="fieldset">
            <dl>
                <dt class="label label-default"><%= model_class.human_attribute_name(:name) %></dt>
                <dd>
                    <pre class="prettyprint"><%= @budget.name %></pre>
                </dd>
                <dt class="label label-default"><%= model_class.human_attribute_name(:planned_savings) %></dt>
                <dd>
                    <pre class="prettyprint"><%= @budget.planned_savings %></pre>
                </dd>
                <dt class="label label-default"><%= model_class.human_attribute_name(:start_date) %></dt>
                <dd>
                    <pre class="prettyprint"><%= @budget.start_date %></pre>
                </dd>
                <dt class="label label-default"><%= model_class.human_attribute_name(:end_date) %></dt>
                <dd>
                    <pre class="prettyprint"><%= @budget.end_date %></pre>
                </dd>
                <dt class="label label-default"><%= model_class.human_attribute_name(:active) %></dt>
                <dd>
                    <pre class="prettyprint"><%= @budget.active %></pre>
                </dd>
            </dl>
        </div>

        <div class="uk-form-row">
            <%= link_to t('.back', :default => t("helpers.links.back")),
              budgets_path, :class => 'uk-button uk-button-default'  %>
            <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_budget_path(@budget), :class => 'uk-button uk-button-default' %>
            <%= link_to t('.destroy', :default => t("helpers.links.destroy")), budget_path(@budget), :method => 'delete', :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'uk-button uk-button-danger' %>
        </div>
    </div>
</section>

<section class="page-section">
    <%= render template: '/incomes/index' %>
</section>

<section class="page-section">
    <%= render template: '/expenses/index' %>
    <section>